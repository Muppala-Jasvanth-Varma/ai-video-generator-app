<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jasvanthvarma.pastportals">

    <!-- Allow internet access -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pastportals"
        android:usesCleartextTraffic="true"

        tools:targetApi="31">

        <!-- MainActivity (Launcher Activity) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Pastportals">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Opening Screen Activity -->
        <activity
            android:name=".OpeningActivity"
            android:exported="true"
            android:label="Opening Activity"
            android:theme="@style/Theme.Pastportals" />



        <!-- Login Screen Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.Pastportals" />



        <!-- Signup Screen Activity -->
        <activity
            android:name=".SignupActivity"
            android:exported="true"
            android:label="Signup"
            android:theme="@style/Theme.Pastportals" />

        <!-- Profile Screen Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="true"
            android:label="Profile"
            android:theme="@style/Theme.Pastportals" />

        <!-- Dashboard Screen Activity -->
        <activity
            android:name=".DashboardActivity"
            android:exported="true"
            android:label="Dashboard"
            android:theme="@style/Theme.Pastportals" />

        <activity android:name=".ResultActivity" android:exported="true" />

        <activity
            android:name=".VideoActivity"
            android:exported="false" />
    </application>
</manifest>
